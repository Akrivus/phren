<%= render 'chats/breadcrumbs' %>

<h1>Chats</h1>

<table class="table" id="chats">
  <thead>
    <tr>
      <th>ID</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr id="<%= dom_id chat %>">
        <td><%= link_to chat.id, prompt_chat_path(@prompt, chat) %></td>
        <td><%= chat.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
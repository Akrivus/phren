<h1>Log In</h1>
<%= form_with(url: auth_url, method: 'post', local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control', placeholder: 'Enter username.' %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Enter password.' %>
  </div>
  <div class="mb-3">
    <%= form.submit 'Continue', class: 'btn btn-primary w-100' %>
    <small class="form-text">Don't have an account? <%= link_to 'Sign up!', new_user_url, class: 'text-primary' %></small>
  </div>
<% end %>
